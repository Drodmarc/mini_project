<div class="container">
<h1>Edit Description</h1>

  <div class="form-group">
    <%= form_for @url, url: url_path(@url), method: :patch do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>

    <% end %>
    <%= link_to 'Back', urls_path, class: 'btn btn-info' %>
</div>